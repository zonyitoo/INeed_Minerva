<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    android:id="@+id/relativelayout_splashscreen_whole">
	
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="70dp"
        android:layout_centerInParent="true"
        android:id="@+id/linearlayout_loadingactivity_centerall">
        
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:layout_marginTop="50dp"
            android:id="@+id/linearlayout_loadingactivity_loginbox"
            android:visibility="invisible">
            
	        <LinearLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <LinearLayout android:layout_width="match_parent"
	                android:layout_height="135dp"
	                android:orientation="vertical"
	                android:layout_weight="1">
	                <EditText android:layout_width="match_parent"
	                    android:layout_height="45dp"
	                    android:hint="@string/edittext_login_name"
	                    android:id="@+id/edittext_loadingactivity_name"
	                    android:singleLine="true"
	                    android:imeOptions="actionNext"/>
	                <EditText android:layout_width="match_parent"
	                    android:layout_height="45dp"
	                    android:password="true"
	                    android:hint="@string/edittext_login_passwd"
	                    android:id="@+id/edittext_loadingactivity_passwd"
	                    android:singleLine="true"
	                    android:imeOptions="actionDone"/>
	                <Button android:layout_width="match_parent"
	                	android:layout_height="45dp"
	                	android:text="LOGIN"
	               		android:layout_weight="2"
	                	android:id="@+id/button_loadingactivity_login"/>
	            </LinearLayout>
	            
	        </LinearLayout>
	        
	    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:visibility="invisible"
        android:background="#22123456"
        android:id="@+id/linearlayout_loadingactivity_reg">
        
        <Button android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="REGISTER"
	        android:id="@+id/button_loadingactivity_reg"/>
    </LinearLayout>
</RelativeLayout>